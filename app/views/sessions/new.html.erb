<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100">
				<div class="login100-pic js-tilt" data-tilt>
					<%= image_tag 'moto.png' %>
				</div>
        <%= form_tag '/login', class:'login100-form' do %>
				
					<span class="login100-form-title">
						Member Login
					</span>

					<div class="wrap-input100">
            <%= text_field_tag :email, "" ,class:'input100', placeholder: "Email" %>
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-envelope" aria-hidden="true"></i>
						</span>
					</div>

					<div class="wrap-input100">
            <%= password_field_tag :password, "", class: 'input100', placeholder: "Password" %>
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-lock" aria-hidden="true"></i>
						</span>
					</div>
					
				
            <%= submit_tag "Submit", class:'login100-form-btn margin-top-50' %>
					

					<div class="text-center p-t-136 txt2">
            <%= link_to 'Create your account', '/signup'%>
					</div>
				
        <% end %>
			</div>
		</div>
	</div>
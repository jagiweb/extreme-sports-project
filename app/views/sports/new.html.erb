

</div>
<% if current_user.admin == true %>
<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100">
					<div class="login100-pic js-tilt" data-tilt>
						<%= image_tag 'moto.png' %>

					<div class="row margin-top-50">
						<div class="col-lg-12">
							<% if flash[:errors] %>
							<div class="text-25px text-center ">
								<% flash[:errors].each do |message| %>
								<p class="text-25px title-show color-red"><%= message %></p>
								<% end %>
							</div>
						<% end %>
						<% if flash[:notice] %>
								<div class="text-25px text-center ">
								<p class="title-show text-25px color-red"><%= flash[:notice] %></p>
								</div>
						<% end %>
						</div>
					</div>

					</div>
        <%= form_for @sport, class:'login100-form' do |f| %>
				
					<span class="login100-form-title">
						New sport
					</span>

          <div class="wrap-input100">
            <%= f.text_field :name , class:'input100', placeholder: "Name" %>
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-envelope" aria-hidden="true"></i>
						</span>
					</div>

          <div class="wrap-input100">
            <%= f.text_area :description ,class:'input100', placeholder: "Description here" %>
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-envelope" aria-hidden="true"></i>
						</span>
					</div>

					<div class="wrap-input100">
            <%= f.number_field :price_per_person,class:'input100', placeholder: "Price" %>
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-envelope" aria-hidden="true"></i>
						</span>
					</div>

                    <div class="wrap-input100">
            <%= f.text_field :main_image, class:'input100', placeholder: "Link your image" %>
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-envelope" aria-hidden="true"></i>
						</span>
					</div>
				
            <%= f.submit "Submit", class:'login100-form-btn margin-top-50' %>
				
        <% end %>
			</div>
		</div>
	</div>
<% end %>
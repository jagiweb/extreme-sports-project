

<% if current_user.admin == true %>
<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100">
					<div class="login100-pic js-tilt" data-tilt>
						<%= image_tag 'moto.png' %>

					<div class="row margin-top-50">
						<div class="col-lg-12">
							<% if flash[:errors] %>
							<div class="text-25px text-center ">
								<% flash[:errors].each do |message| %>
								<p class="text-25px title-show color-red"><%= message %></p>
								<% end %>
							</div>
						<% end %>
						<% if flash[:notice] %>
								<div class="text-25px text-center ">
								<p class="title-show text-25px color-red"><%= flash[:notice] %></p>
								</div>
						<% end %>
						</div>
					</div>

					</div>
        <%= form_for @event, class:'login100-form' do |f| %>
				
					<span class="login100-form-title">
						New Event
					</span>
                    <div class="wrap-input100">
                    <%= f.collection_select :location_id , Location.all, :id, :address%>
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-envelope" aria-hidden="true"></i>
						</span>
					</div>

                    <div class="wrap-input100">
                         <%= f.date_field :date, class:'input100' %>
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-envelope" aria-hidden="true"></i>
						</span>
					</div>
                    
                    <div class="wrap-input100">
            <%= f.collection_select :sport_id , Sport.all, :id, :name%>
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-envelope" aria-hidden="true"></i>
						</span>
					</div>

          <div class="wrap-input100">
            
            <%= f.collection_select :day_type_id , DayType.all, :id, :name%>
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-envelope" aria-hidden="true"></i>
						</span>
					</div>

                    

				
                        <%= f.submit "Submit", class:'login100-form-btn margin-top-50' %>

				
        <% end %>
			</div>
		</div>
	</div>
<% end %>